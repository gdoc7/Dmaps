<p id="notice"><%= notice %></p>

<h1>Ordenes</h1>

<table>
  <thead>
    <tr>
      
      <th>Direccion</th>
      <th>Latitud</th>
      <th>Longitud</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        
        <td><%= order.address %></td>
        <td><%= order.latitude %></td>
        <td><%= order.longitude %></td>
        <td><%= link_to 'Mostrar en mapa', order %></td>
        <td><%= link_to 'Editar', edit_order_path(order) %></td>
        <td><%= link_to 'Eliminar ', order, method: :delete, data: { confirm: 'Esta seguro de eliminar orden?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>


<%= link_to 'Nueva orden', new_order_path %>

