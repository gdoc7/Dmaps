<p id="notice"><%= notice %></p>

<div  class=" row center-md">
<div class="col-xs-10">
<p>
  <strong>Direccion:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Latitud:</strong>
  <%= @order.latitude %>
</p>

<p>
  <strong>Longitud:</strong>
  <%= @order.longitude %>
</p>

<div style="padding:20px;">
<%= link_to 'Editar', edit_order_path(@order) , class: "btn"%> 
<%= link_to 'Regresar', orders_path , class: "btn"%>
</div>

<script type="text/javascript">
    window.onload = function() {
        L.mapquest.key = '9c1fwToFBs3KY9mg8dWk6Jbqm69FnwbQ';

        var map = L.mapquest.map('map', {

            center: [50.5, 30.5 ],
            layers: L.mapquest.tileLayer('map'),
            zoom: 9
        });

        map.addControl(L.mapquest.control());
        L.marker([ <% @hash%>]).addTo(map);
    }
</script>
<body>
<div id="map" style="width: 100%; height: 300px; text-align: center"></div>
</body>
</div>
</div>
