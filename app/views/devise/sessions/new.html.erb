
<div  class=" row center-md">
  <div class="col-xs-6">
    <h2>Iniciar sesión</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:" Email", class:"form-control celdita"%><br>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Contraseña", class:"form-control celdita" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field" style="margin-top: 10px;">
          <%= f.check_box :remember_me  %>
          <%= f.label :remember_me , "Recordarme"  %>
        </div>
      <% end -%>
      <div class="actions">
        <%= f.submit "Iniciar sesión"%>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

</div>


